.common-container
    color whiteMain
    display flex
    flex-direction column
    justify-content center
    text-align center
    text-align -webkit-center
    padding 30px 60px

    @media only screen and (max-width 767px)
        padding 80px 20px 30px


.lds-dual-ring {
    display: inline-block;
    width: 25px;
    height: 25px;
    position relative
    top -50px
}
.lds-dual-ring:after {
    content: " ";
    display: block;
    width: 25px;
    height: 25px;
    margin: 1px;
    border-radius: 50%;
    border: 5px solid orangeMain;
    border-color: backgroundReverse transparent backgroundReverse transparent;
    animation: lds-dual-ring 1.2s linear infinite;
}

@keyframes lds-dual-ring {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

@media only screen and (max-width 767px)
    h1
        font-size 35px

    h2
        font-size 30px


@media only screen and (max-width 450px)
    h1
        font-size 30px
    h2
        font-size 25px

@media only screen and (max-width 350px)
